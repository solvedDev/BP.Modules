{
	"vars": {
		"kill_time": {
			"description": "The time it takes until the entity dies.",
			"default_value": [30]
		},
		"event": {
			"description": "The event to start death.",
			"default_value": "gm1:on_kill"
		}
	},
	"component": {
		"add": {
			"component_groups": {
				"kill_entity": {
					"minecraft:explode": {
						"power": 0,
						"fuseLength": "$kill_time",
						"fuseLit": true
					}
				}
			},
			"events": {
				"$event": {
					"add": {
						"component_groups": [ "kill_entity" ]
					}
				}
			}
		}
	}
}